{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es6",
      "DOM",
    ],
    "module": "commonjs",
    "rootDirs": [
      ""
      // "./src",
      // "./tests"
    ],
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "build",
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
  },
  "exclude": [
    "node_modules",
    "**/*.js",
    "**/*.dev.ts",
    "build"
  ]
}